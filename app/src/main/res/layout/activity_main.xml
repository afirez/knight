<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ScrollView
            android:id="@+id/svAndroid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp">
        <LinearLayout
                android:id="@+id/llOpenGl"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="RxTouch"
                    android:id="@+id/btnRxTouch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    android:text="Custom LayoutManager"
                    android:id="@+id/btnCumtomLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    android:text="LazyViewPagerFragment"
                    android:id="@+id/btnLazyViewPagerFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    android:text="LazyFragment"
                    android:id="@+id/btnLazyFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    android:text="智能诊断"
                    android:id="@+id/btnWebFragment1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <Button
                    android:text="智能问药"
                    android:id="@+id/btnWebFragment2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>