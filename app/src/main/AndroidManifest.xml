<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.afirez.app">

    <application
            android:name="com.afirez.knight.core.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.MotionEventActivity">
        <activity android:name=".ui.RecyclerBannerActivity">
        </activity>
        <activity android:name=".ui.RxTouchActivity">
        </activity>
        <activity android:name=".ui.WebActivity">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.CustomRecyclerViewActivity">
        </activity>
        <activity android:name=".ui.LazyViewPagerActivity">
        </activity>
        <activity android:name=".ui.LazyActivity">
        </activity>
    </application>

</manifest>